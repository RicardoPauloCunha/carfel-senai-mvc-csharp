@using CheckPoint.Models;
@using CheckPoint.Models;

@{
    ViewBag.Title = "Contato";
    if (this.ViewBag.UserLog == null)
    {
        Layout = "MasterPageDeslogado";
    }
    else
    {
        Layout = "MasterPageLogado";    
    }
}

<div class="titulo flex-container">
    <div class="titulo-item">
        <h2>Contato</h2>
    </div>
</div>

<main>

    <section class="contato flex-container espacamento">
        <div class="contato-item">
            <h1>Entrar em contato</h1>
            @if (ViewData["UsuarioLog"] != null)
            {
                UsuarioModel usuario = ViewData["UsuarioLog"] as UsuarioModel;
                <div>  
                    <form method="post" action="/Pagina/Contato" class="contato-item-form">
                    <label>
                        <p class="mensegeInvalid">@TempData["MensengeValN"]</p>
                        <input type="text" name="nome" placeholder="@usuario.Nome" class="contato-item-form-input">
                    </label>
                    <label>
                        <p class="mensegeInvalid">@TempData["MensengeValE"]</p>
                        <input type="email" name="email" placeholder="@usuario.Email" class="contato-item-form-input">
                    </label>
                    <label>
                        <p class="mensegeInvalid">@TempData["MensengeValA"]</p>
                        <input type="text" name="assunto" placeholder="Assunto:" class="contato-item-form-input" required>
                    </label>
                    <label>
                        <p class="mensegeInvalid">@TempData["MensengeValT"]</p>
                        <textarea name="texto" placeholder="Mensagem:" class="contato-item-form-input contato-textarea" required></textarea>
                    </label>
                        <div class="botao-contato">
                            <input type="submit" value="Enviar" class="button-sub">
                        </div>
                    </form> 
                    <p class="mensegeInvalid">@TempData["FalhaCadMen"]</p>  
                    <p>@TempData["SucessoCadMen"]</p>
                </div>
            }
            else
            {
                <div>  
                    <form method="post" action="/Pagina/Contato" class="contato-item-form">
                    <label>
                        <p class="mensegeInvalid">@TempData["MensengeValN"]</p>
                        <input type="text" name="nome" placeholder="Nome:" class="contato-item-form-input" required>
                    </label>
                    <label>
                        <p class="mensegeInvalid">@TempData["MensengeValE"]</p>
                        <input type="email" name="email" placeholder="Email:" class="contato-item-form-input" required>
                    </label>
                    <label>
                        <p class="mensegeInvalid">@TempData["MensengeValA"]</p>
                        <input type="text" name="assunto" placeholder="Assunto:" class="contato-item-form-input" required>
                    </label>
                    <label>
                        <p class="mensegeInvalid">@TempData["MensengeValT"]</p>
                        <textarea name="texto" placeholder="Mensagem:" class="contato-item-form-input contato-textarea" required></textarea>
                    </label>
                        <div class="botao-contato">
                            <input type="submit" value="Enviar" class="button-sub">
                        </div>
                    </form> 
                    <p class="mensegeInvalid">@TempData["FalhaCadMen"]</p>  
                    <p>@TempData["SucessoCadMen"]</p>
                </div>
            }
        </div>
        
        <div class="contato-item-dados">
            <h2>CarFel</h2>
            <h3>Endereço:</h3>
            <p>Alameda Barão de Limeira, 539</p>
            <p>Santa Cecilia</p>
            <p>SAC XXXXXXXXX</p>
            <h3>Telefone:</h3>
            <p>(xx) XXXXX-XXXX</p>
            <h3>E-mail:</h3>
            <p>carfel.checkpoint@gmail.com</p>
            <h3>Redes Sociais</h3>
            <img src="/imagem/redessociais.png" alt="Icones das redes sociais." width="170" height="170">
        </div>
    </section>

    <section class="mapa">
        <div class="mapa-img">
            <h2>Como Chegar</h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.8871329131534!2d-46.64847708510331!3d-23.53656156656186!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce5843deade6e3%3A0x124f377d06c7e71f!2sAlameda+Bar%C3%A3o+de+Limeira%2C+539+-+Campos+El%C3%ADseos%2C+S%C3%A3o+Paulo+-+SP%2C+01202-001!5e0!3m2!1spt-BR!2sbr!4v1536842153722" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
    </section>
    
</main>